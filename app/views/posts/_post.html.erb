<div class="row">
  <div class="col s6 offset-s3">
    <div class="card-panel">
      <span class="black-text">
        <%= simple_format(post.content) %>
      </span>
      <ul>
        <% if controller.action_name == 'index' %>
          <% if user_signed_in? && post.user_id == current_user.id %>
            <li><a id="<%= post.id %>" class="waves-effect waves-light btn right destroy">削除</a></li>
            <li><%= link_to '修正', edit_post_path(post.id), class: 'waves-effect waves-light btn right' %></li>
          <% end %>
          <li><%= link_to '詳細', post_path(post.id), class: 'waves-effect waves-light btn right' %></li>
        <% else %>
          <li><%= link_to '戻る', root_path, class: 'waves-effect waves-light btn right', data: {"turbolinks" => false} %></li>
        <% end %>
          <div style="height: 24px;"></div>
      </ul>
    </div>
  </div>
</div>
