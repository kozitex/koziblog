<%= form_for @post do |f| %>
  <div class="row">
    <div class="input-field">
      <%= f.label :content %><br />
      <%= f.text_area :content, autofocus: true, class: 'materialize-textarea' %>
    </div>
  </div>

  <div class="row">
    <div class="actions">
      <%= link_to '戻る', root_path, class: 'amber darken-3
 waves-effect waves-light btn right', data: {"turbolinks" => false} %>
      <%= f.submit "送信", class: 'amber darken-3
 waves-effect waves-light btn right' %>
    </div>
  </div>
<% end %>
